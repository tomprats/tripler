<div id="order">
  <div id="mainpage">
    <h1>General Store</h1>
    <div class="row">
      <p class="text-center">
        Our jerky costs $<%= number_with_precision(@products.first.price / 100.0, precision: 2) %> per pack, and are shipped in packs of <%= Order.size %>.
        <br>For bulk orders call 717-542-4022 or fill out our <%= link_to "contact form", contact_path %> and we'll get back to you soon.
      </p>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <h4 class="text-center">
          <span class="padding-right-40">Packs: <span class="packs"><%= @order.packs %></span></span>
          <span>Quantity to complete a pack: <span class="packless"><%= @order.packless.zero? ? 0 : Order.size - @order.packless  %></span></span>
        </h4>
      </div>
    </div>
    <div class="row">
      <% normal = @products.select { |product| !product.name.downcase.include?("coffee") } %>
      <% coffee = @products.select { |product| product.name.downcase.include?("coffee") } %>
      <div class="col-xs-6">
        <h2 class="text-center">Classic Jerky</h2>
        <div class="row">
          <% normal.each do |product| %>
            <%= render partial: "jerky", locals: { product: product } %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-6">
        <h2 class="text-center">Coffee Jerky</h2>
        <div class="row">
          <% coffee.each do |product| %>
            <%= render partial: "jerky", locals: { product: product } %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row margin-top-20">
      <div class="col-xs-6 text-center">
        <%= link_to "Empty Cart", order_path, method: :delete, class: "btn btn-green" %>
        <%= link_to "Checkout", "#", class: "btn btn-green checkout" %>
      </div>
      <div class="col-xs-6">
        <h3 class="margin-0">Total: $<span class="total"><%= number_with_precision(@order.total_price/100.0, precision: 2) %></span></h3>
      </div>
    </div>
    <% unless @coming_soon.empty? %>
      <h1>Coming Soon</h1>
      <div class="row">
        <% normal = @coming_soon.select { |product| !product.name.downcase.include?("coffee") } %>
        <% coffee = @coming_soon.select { |product| product.name.downcase.include?("coffee") } %>
        <div class="col-xs-6">
          <div class="row">
            <% normal.each do |product| %>
              <%= render partial: "coming_soon_jerky", locals: { product: product } %>
            <% end %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="row">
            <% coffee.each do |product| %>
              <%= render partial: "coming_soon_jerky", locals: { product: product } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
