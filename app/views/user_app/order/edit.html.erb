<div id="order">
  <div id="mainpage">
    <h1>Shop</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantitity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr data-id="<%= order_item.product_id %>">
            <td><%= order_item.product.name %></td>
            <td><%= order_item.product.description %></td>
            <td>$<%= number_with_precision(order_item.product.price / 100.0, precision: 2) %></td>
            <td class="product-quantity text-center"><%= select_tag(:quantity, options_for_select(0..50, order_item.quantity)) %></td>
            <td class="product-total">$<%= number_with_precision(order_item.product.price * order_item.quantity / 100.0, precision: 2) %></td>
          </tr>
        <% end %>
        <tr>
          <td><b>Shipping</b></td>
          <td></td>
          <td></td>
          <td></td>
          <td>TBD</td>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <div class="col-xs-12">
        <h4 class="text-center">
          <span class="padding-right-40">Packs: <span class="packs"><%= @order.packs %></span></span>
          <span>Quantity to complete a pack: <span class="packless"><%= @order.packless.zero? ? 0 : 8 - @order.packless  %></span></span>
        </h4>
      </div>
    </div>
    <div class="row margin-top-20">
      <div class="col-xs-6 text-center order-actions">
        <%= link_to "Empty Cart", order_path, method: :delete, class: "btn btn-green" %>
        <%= link_to "Continue", order_address_path, class: "btn btn-green continue" %>
      </div>
      <div class="col-xs-6">
        <h3 class="margin-0">Sub Total: $<span class="total"><%= number_with_precision(@order.total_price / 100.0, precision: 2) %></span></h3>
      </div>
    </div>
  </div>
</div>
