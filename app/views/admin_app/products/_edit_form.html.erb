<div class="edit-product-form hide product-<%= product.id %>">
  <%= link_to "Edit Product", "#", class: "prevent-default" %>
  <%= link_to "x", "#", class: "pull-right edit-product" %>
  <div class="clearfix margin-bottom-5"></div>
  <%= form_for(product, url: admin_product_path(id: product.id), method: :put, html: { class: "form-horizontal" }) do |f| %>
    <div class="margin-top-10 margin-bottom-10">
      <div class="input-left">
        <%= f.text_field :name, { placeholder: "Name", class: "form-control" } %>
      </div>
      <div class="input-right">
        <%= f.number_field :price, { value: number_with_precision(product.price / 100.0, precision: 2), step: 0.01, placeholder: "Price", class: "form-control" } %>
      </div>
      <div class="clearfix margin-bottom-10"></div>
      <div class="input-full">
        <%= f.text_field :description, { placeholder: "Description", class: "form-control" } %>
      </div>
      <div class="clearfix margin-bottom-10"></div>
      <div class="input-full">
        <div class="form-control">
          <%= f.check_box :coming_soon %>
          Not yet available (Coming soon)
        </div>
      </div>
      <div class="clearfix margin-bottom-10"></div>
      <div class="input-full">
        <%= f.file_field :image, { placeholder: "Image", class: "form-control" } %>
      </div>
      <div class="clearfix margin-bottom-10"></div>
      <%= f.submit "Update Product", class: "btn btn-green" %>
    </div>
  <% end %>
</div>
