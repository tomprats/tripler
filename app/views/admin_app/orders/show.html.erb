<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Shipping</th>
      <th>Shipping Price</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.date %></td>
      <td><%= @order.name %></td>
      <td><%= @order.phone_number %></td>
      <td><%= @order.shipping %></td>
      <td>$<%= number_with_precision(@order.shipping_total / 100.0, precision: 2) %></td>
      <td>$<%= number_with_precision(@order.total_price / 100.0, precision: 2) %></td>
    </tr>
  </tbody>
</table>

<h3>Packages</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Package</th>
      <th>Label</th>
    </tr>
  </thead>
  <tbody>
    <% @order.packages.each do |package| %>
      <tr>
        <td class="text-center"><%= package.id %></td>
        <td><%= link_to admin_package_url(package), admin_package_url(package), target: :_blank %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Address</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.name %></td>
      <td><%= @order.phone_number %></td>
      <td><%= @order.address1 %></td>
      <td><%= @order.address2 %></td>
      <td><%= @order.city %></td>
      <td><%= @order.state %></td>
      <td><%= @order.zipcode %></td>
    </tr>
  </tbody>
</table>

<h3>Items Purchased</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Package</th>
      <th>Price Per Unit</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %></td>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td class="text-center"><%= item.package.id %></td>
        <td>$<%= number_with_precision(item.price / 100.0, precision: 2) %></td>
        <td class="text-center"><%= item.quantity %></td>
        <td>$<%= number_with_precision(item.total_price / 100.0, precision: 2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
