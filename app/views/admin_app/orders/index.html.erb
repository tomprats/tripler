<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Shipping</th>
      <th>Shipping Price</th>
      <th>Discount</th>
      <th>Total Price</th>
      <th>Shipped</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.date %></td>
        <td><%= order.name %></td>
        <td><%= order.phone_number %></td>
        <td><%= order.shipping %></td>
        <td>$<%= number_with_precision(order.shipping_total / 100.0, precision: 2) %></td>
        <td>$<%= number_with_precision(order.discount / 100.0, precision: 2) %></td>
        <td>$<%= number_with_precision(order.total_price / 100.0, precision: 2) %></td>
        <td><%= order.shipped %> (<%= link_to "toggle", admin_toggle_shipped_path(id: order.id), class: "admin-link" %>)</td>
        <td><%= link_to "View", admin_order_path(order.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
