<div id="products">
  <div id="mainpage">
    <h1>Shop</h1>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-6 product-box" data-id="<%= product.id %>">
          <div class="row">
            <div class="col-md-6">
              <%= image_tag product.image.url, class: "product-image" %>
            </div>
            <div class="col-md-6">
              <div class="product-name">Name: <%= product.name %></div>
              <div class="product-price">Price: $<span class="price"><%= number_with_precision(product.price/100.0, precision: 2) %></span></div>
              <div class="product-description">Description: <%= product.description %></div>
              <div class="product-quantity">Quantity: <%= select_tag(:quantity, options_for_select(0..50, @cart[product.id.to_s])) %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row margin-top-20">
      <div class="col-md-6 text-center">
        <%= link_to "Empty Cart", empty_cart_path, method: :delete, class: "btn btn-green" %>
        <%= link_to "Checkout", "#", class: "btn btn-green checkout" %>
      </div>
      <div class="col-md-6">
        <h3 class="margin-0">Total: $<span class="total"><%= number_with_precision(@total/100, precision: 2) %></span></h3>
      </div>
    </div>
  </div>
</div>
